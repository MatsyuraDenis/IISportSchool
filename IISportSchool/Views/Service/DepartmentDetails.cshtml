@model Department

<div class="m-1">
    <div class="container">
        <h2 class="text-center">Відділ @Model.Name</h2>
        <hr />
        <h5>Секції: </h5>
        <div class="row justify-content-center">
            @foreach (var section in Model.Sections)
            {
                <div class="col-6 col-sm-4 col-md-4 col-lg-3 space-10">
                    @Html.Partial("_SectionSummary", section)
                </div>
            }
        </div>
        <div>
            <a class="btn btn-info" asp-action="DepartmentList">Список усіх відділів</a>
            @if (signInManager.IsSignedIn(User) && User.IsInRole(DefaultRoles.Admin))
            {
                <a class="btn btn-primary" asp-action="UpdateDepartment" asp-route-id="@Model.Id">Редагувати</a>
                <a class="btn btn-warning float-right" asp-action="DeleteDepartment" asp-route-id="@Model.Id">Видалити</a>
            }
        </div>
    </div>
</div>