@model Section

<div class="container">
    @using (Html.BeginForm("AddSection", "Service"))
    {
        <div>
            <h1 class="text-center">Відділ: @ViewBag.Department.Name</h1>
        </div>
        <div class="form-group">
            <p class="font-weight-bold">Назва секції: </p>
            @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Name)
        </div>
        @Html.HiddenFor(d => d.DepartmentId)
        @Html.AntiForgeryToken()

        <div>
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a class="btn btn-info" asp-action="DepartmentList">Назад</a>
        </div>
    }
</div>