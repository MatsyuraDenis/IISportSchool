@model Department

    <div class="container">
        <h2 class="text-center">Створення Відділу</h2>
        <hr />
        @using (Html.BeginForm("AddDepartment", "Service"))
        {
            <div class="form-group">
                <h4>Назва відділу</h4>
                @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Name)
            </div>

            <div class="form-group">
                <h4>Шлях до головної картинки</h4>
                @Html.TextBoxFor(s => s.ImagePath, new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.ImagePath)
            </div>

            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a asp-action="DepartmentList" class="btn btn-info">Назад</a>
        }
    </div>



