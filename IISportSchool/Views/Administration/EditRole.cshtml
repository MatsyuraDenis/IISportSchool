@model EditRoleViewModel

@{
    ViewData["Title"] = "редагування ролі";
}

<h1>Редагування ролі</h1>

<div class="container">
    <form method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Підтвердити</button>
                <a asp-action="ListRoles" class="btn btn-primary">Відмінити</a>
            </div>
        </div>


        <div class="card">
            <div class="card-header">
                <h3>Користувачі у цій ролі</h3>
            </div>

            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach(var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Немає на даний момент</h5>
                }
            </div>

            <div class="card-footer">
                <a asp-action="EditUsersInRole" asp-controller="Administration" 
                   asp-route-roleId="@Model.Id" class="btn btn-primary">
                Добавити або видалити користувача</a>
            </div>
        </div>

    </form>
</div>

