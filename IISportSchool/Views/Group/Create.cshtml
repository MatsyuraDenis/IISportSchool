@model Group

<div class="container">
    <h2>Створення групи для секції "@ViewBag.Section"</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MinChildAge" class="control-label">Мінівальний вік</label>
                    <input asp-for="MinChildAge" class="form-control" />
                    <span asp-validation-for="MinChildAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxChildAge" class="control-label">Максимальний вік</label>
                    <input asp-for="MaxChildAge" class="form-control" />
                    <span asp-validation-for="MaxChildAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PricePerMonth" class="control-label">Ціна за 1 місяць</label>
                    <input asp-for="PricePerMonth" class="form-control" />
                    <span asp-validation-for="PricePerMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Назва групи</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ImagePath">
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Створити" />
                </div>
                @Html.HiddenFor(g=>g.SectionId)
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
