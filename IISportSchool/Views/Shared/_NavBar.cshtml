@inject SignInManager<IdentityUser> signInManager;

<div class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="navbar-header">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">Спортшкола</a>
    </div>

    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-action="DepartmentList" asp-controller="Service">Послуги</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Teacher">Викладачі</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Info">Інформація</a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            @if (signInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <form method="post" asp-action="logout" asp-controller="account">
                        <button class="nav-link py-0 btn btn-link" type="submit" style="width:auto;">
                            Logout @User.Identity.Name
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="Register" asp-controller="Account">Реєстрація</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Login" asp-controller="Account">Війти</a>
                </li>
            }
        </ul>
    </div>
</div>
