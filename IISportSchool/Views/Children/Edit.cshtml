@model AddChildViewModel

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Children.Id" />
            <div class="form-group">
                <label asp-for="Children.Name" class="control-label">Ім'я</label>
                <input asp-for="Children.Name" class="form-control" />
                <span asp-validation-for="Children.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Children.SecondName" class="control-label">Фамілія</label>
                <input asp-for="Children.SecondName" class="form-control" />
                <span asp-validation-for="Children.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Children.Age" class="control-label">Вік(@Model.MinAge-@Model.MaxAge)</label>
                <input asp-for="Children.Age" class="form-control" />
                <span asp-validation-for="Children.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Children.GroupId" />
                <input type="hidden" asp-for="MaxAge" />
                <input type="hidden" asp-for="MinAge" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
